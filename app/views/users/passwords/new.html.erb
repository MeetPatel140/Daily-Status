<!-- Page Wrapper -->
<div id="wrapper">

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
  
      <!-- Main Content -->
      <div id="content">
  
          <!-- Topbar -->
          <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
              <div style="display: flex; justify-self: center; align-content: center; text-align:center; align-items: center;">
                  <i class="fas fa-laptop-code" style="color: blue; font-size: 1.8rem; margin-left: 20px;"></i>
                  <div class="sidebar-brand-text mx-2" style="color: blue; font-size: 1.7em; width:100%; font-weight: 800;">Daily Status<sup></sup></div>
              </div>
          </nav>
          <!-- End of Topbar -->
  
          <!-- Main Login -->
          <div class="container">
              <div class="card">
                  <div class="card-body">
                      <div class="form-heading"><i class="fa fa-key"></i> PASSWORD RESET</div>
                      <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
                      <%= render "users/shared/error_messages", resource: resource %>
                          <div class="form-group">
                            <%= f.label :email, for: "email" %>
                            <%= f.email_field :email, autocomplete: "email", placeholder: "Enter your email here..", required: true, class: "form-control", id: "email" %>
                          </div>
                          <%= f.button class: "btn btn-primary btn-block loading-btn", type: "submit" do %>
                              <i class="fa-solid fa-fw fa-paper-plane loading-text"></i>
                              <span class="loading-icon d-none"><i class="fa-solid fa-fw fa-spinner"></i> Sendng Password...</span>
                              <span class="loading-text">Send Password</span>
                          <% end %>
                      <% end %>
                      <!-- <hr class="divider my-3 d-none d-md-block"> -->
                      <br>
                      <div class="mt-3 text-center">
                        <%= link_to "Already have account? Login here", new_session_path(resource_name) %><br />
                        <%= link_to "Don't have an account? Register here", new_registration_path(resource_name) %><br />
                      </div>
                  </div>
              </div>
          </div>
  
      </div>
      <!-- End of Content Wrapper -->
  
  </div>
  <!-- End of Page Wrapper -->