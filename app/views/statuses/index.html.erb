<h1>Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Daily Report</th>
      <th>GitHub PR Link</th>
      <th>Remarks</th>
      <th>Actions</th>
      
    </tr>
  </thead>
  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.date.strftime('%d-%m-%Y') %></td>
        <td><%= status.daily_report %></td>
        <td><%= link_to "Open PR Link", status.github_pr_link, target: "_blank" %></td>
        <td>
          <% if status.remarks.present? %>
              <%= status.remarks %>
            <% if current_user.admin? %>
              <%= link_to "Add Remarks", edit_status_path(status) %>
            <% end %>
          <% else %>
            ----------
          <% end %>
        </td>
        <td>
          <%= link_to 'Show', status %>
          <%= link_to 'Edit', edit_status_path(status) %>
          <%= link_to 'Destroy', status, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_status_path %>
