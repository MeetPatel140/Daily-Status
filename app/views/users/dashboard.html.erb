                                          <td><%= log.user.id %></td>
                                          <td><%= log.timestamp.strftime('%Y-%m-%d %I:%M:%S %p') %></td>
                                          <td><%= log.user.name %></td>
                                          <td><%= log.action %></td>
                                        </tr>
                                      <% end %>
                                    <% else %>
                                      <!-- Display logs for the current user -->
                                      <% current_user.logs.order(timestamp: :desc).each do |log| %>
                                        <tr>
                                          <td><%= log.user.id %></td>
                                          <td><%= log.timestamp.strftime('%Y-%m-%d %I:%M:%S %p') %></td>
                                          <td><%= log.user.name %></td>
                                          <td><%= log.action %></td>
                                        </tr>
