<script>
        $(document).ready(function() {
            function refreshPage() {
                window.location.reload(); // Reload the current page
            }

            // Refresh the page after 1 minute
            setTimeout(refreshPage, 60000);

            // Function to fetch real-time data from the server using AJAX
            function updateDashboardData() {
                // Create an XMLHttpRequest object
                const xhr = new XMLHttpRequest();

                // Configure the GET request to fetch data from the server
                xhr.open('GET', '#', true);

                // Set the callback function to handle the response
                xhr.onreadystatechange = function() {
                    if (xhr.readyState === XMLHttpRequest.DONE) {
                        if (xhr.status === 200) {
                            // Parse the JSON response from the server
                            const responseData = JSON.parse(xhr.responseText);

                            // Update the dashboard with the fetched data
                            document.getElementById("current-employees-present").textContent = responseData.currentEmployeesPresent;
                            document.getElementById("current-pending-reviews").textContent = responseData.currentPendingReviews;
                            document.getElementById("current-pending-reviews").src = responseData.currentPendingReviews;

                        } else {
                            // Handle the error if the request fails
                            console.error('Error while fetching data from the server');
                        }
                    }
                };

                // Send the AJAX request
                xhr.send();
            }


            // Call the function to update the dashboard data initially
            updateDashboardData();

            // Update the dashboard data every 1 second
            setInterval(updateDashboardData, 1000); // Update every 1 second

            // Function to update CPU load
            function updateCPULoad() {
                // Simulate CPU load with a random value (0% to 100%)
                const cpuLoad = Math.floor(Math.random() * 100);

                // Update the CPU load value
                document.getElementById('cpuLoad').textContent = cpuLoad + '%';

                // Update the CPU load progress bar
                document.getElementById('cpuLoadBar').style.width = cpuLoad + '%';
            }

            // Update CPU load initially
            updateCPULoad();

            // Refresh CPU load every 5 second
            setInterval(updateCPULoad, 5000);
            // Refresh data every 10 second 
            setInterval(refreshBidLogs, 10000);
            // Refresh data every 10 second
            setInterval(loadLogs, 10000);

            // Function to refresh logs data
            function refreshLogs() {
                $.ajax({
                    url: '#', // This page itself
                    type: 'GET',
                    success: function(data) {
                        // Replace the current table with the updated one
                        $('#dataTable tbody').html($(data).find('#dataTable tbody').html());
                    },
                    error: function() {
                        console.error('Error refreshing logs data.');
                    }
                });
            }

            // Initial load of bid_logs data
            refreshLogs();

            // Refresh data every second (adjust as needed)
            setInterval(refreshLogs, 10000);
        });
    </script>